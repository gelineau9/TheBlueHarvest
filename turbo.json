{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "BACKEND_", "BACKEND_INTERNAL_*", "DB_*", "POSTGRES_*", "JWT_SECRET"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["build"],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },

    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    }
  }
}
